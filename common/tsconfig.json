{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "noImplicitAny": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "outDir": "lib"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
