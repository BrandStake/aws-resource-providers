{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["es6", "es2020.bigint"],
        "noImplicitAny": true,
        "allowJs": true,
        "alwaysStrict": true,
        "strict": false,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": [
        "**/src/**/*.ts"
    ],
    "exclude": [
        "**/node_modules"
    ]
}
